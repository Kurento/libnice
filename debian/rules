#!/usr/bin/make -f

# Output every command that modifies files on the build system.
#export DH_VERBOSE = 1

# Disable runtime assertions. These are OK for development but unacceptable in production!
export DEB_CFLAGS_MAINT_APPEND=-DG_DISABLE_ASSERT

%:
	dh $@ --with gir

override_dh_auto_configure:
	dh_auto_configure -- -Dgupnp=enabled \
	                     -Dgstreamer=enabled \
	                     -Dintrospection=enabled \
	                     -Dexamples=disabled \
	                     -Dtests=disabled \
	                     -Dgtk_doc=disabled

override_dh_installchangelogs:
	dh_installchangelogs NEWS

override_dh_strip:
	dh_strip --dbgsym-migration='libnice-dbg (<< 0.1.14)'

override_dh_auto_test:
